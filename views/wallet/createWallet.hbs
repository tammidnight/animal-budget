{{> navbar response}}

<form method="POST" action="/create" class="wholeForm">
  <div class="walletCreate">
    <div class="firstColumn">
      <div>
        <h2>Create a New Wallet</h2>
        <p>* mandatory fields</p>
      </div>

      <div class="walletInput">
        <label>Name of the Wallet* <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16" data-bs-toggle="tooltip" data-bs-placement="right" title="Please enter a name for your Wallet, with which you will track your finances.">
  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
</svg></label>
        <input
          type="text"
          name="walletName"
          placeholder="Please enter a name for your wallet"
          class="walletInputField"
        />
      </div>

      <div class="walletInput">
        <label>Starting Date* <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16" data-bs-toggle="tooltip" data-bs-placement="right" title="Please enter the starting date of your new Wallet.">
  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
</svg></label>
        <input
          type="date"
          name="startingDate"
          placeholder="Add the starting date of your wallet"
          class="walletInputField"
        />
      </div>

      <div class="walletInput">
        <label>Monthly Income* <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16" data-bs-toggle="tooltip" data-bs-placement="right" title="Please enter your regular income per month.">
  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
</svg></label>
        <input
          type="Number"
          name="monthlyIncome"
          placeholder="Add your monthly Income"
          step="0.01"
          class="walletInputField"
        />
      </div>

      <div class="walletInput">
        <label>Monthly Spending* <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16" data-bs-toggle="tooltip" data-bs-placement="right" title="Please enter your regular spending per month.">
  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
</svg></label>
        <input
          type="Number"
          name="monthlySpending"
          placeholder="Add your monthly Spending"
          step="0.01"
          class="walletInputField"
        />
      </div>

      <div class="currencyRow">
        <label>
          <input type="radio" name="currency" value="Euro" />
          <img src="/images/euro.png" width="25" />
        </label>
        <label>
          <input type="radio" name="currency" value="Dollar" />
          <img src="/images/dollar.png" width="25" />
        </label>
        <label>
          <input type="radio" name="currency" value="Pound" />
          <img src="/images/pfund-sterling.png" width="25" />
        </label>
        <label>
          <input type="radio" name="currency" value="Yen" />
          <img src="/images/yen.png" width="25" />
        </label>
        <p>* <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16" data-bs-toggle="tooltip" data-bs-placement="right" title="Please choose the currency for your Wallet.">
  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
</svg></p>
      </div>

      <div>
        <label for="shared">Shared Wallet* <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16" data-bs-toggle="tooltip" data-bs-placement="right" title="Please decide if you want to share your Wallet with another user. This means that both users can make changes to the Wallet.">
  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
</svg></label>
        <div>
          <input type="radio" name="shared" value="true" id="true" />
          <label for="true">Yes</label>
        </div>
        <div>
          <input type="radio" name="shared" value="false" id="false" />
          <label for="true">No</label>
        </div>
      </div>

      <div class="walletInput sharedWalletTrue">
        <label>Username of the second User* <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16" data-bs-toggle="tooltip" data-bs-placement="right" title="Tooltip on right">
  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
</svg></label>
        <input
          type="text"
          name="sharedWalletUser"
          placeholder="Please enter the username for sharing"
          class="walletInputField"
        />
      </div>
    </div>

    <div class="secondColumn">
      <h2>Choose your Saving Plan* <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16" data-bs-toggle="tooltip" data-bs-placement="right" title="Please choose your personal saving plan, depending on how much you want to save from your monthly income.">
  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
</svg></h2>
      
      <div class="savingPlanDiv">
        <label>
          <input type="radio" name="savingPlan" value="Gold" />
          <img src="/images/giraffe.png" width="100" />
        </label>
        <p class="savingPlanP">GOLD<br />Giraffes only sleep between ten minutes
          and two hours per night! With this plan you will save 40% of your
          income.</p>
      </div>
      <div class="savingPlanDiv">
        <label>
          <input type="radio" name="savingPlan" value="Silver" />
          <img src="/images/rabbit.png" width="100" />
        </label>
        <p class="savingPlanP">SILVER<br />Bunnies are cute and have a lot of
          kids, they need the money to send them to college. With this plan you
          will save 20% of your income.
        </p>
      </div>
      <div class="savingPlanDiv">
        <label>
          <input type="radio" name="savingPlan" value="Bronze" />
          <img src="/images/sloth.png" width="100" />
        </label>
        <p class="savingPlanP">BRONZE<br />Sloths are famously slow but
          steady. With this plan you will save 10% of your income.
        </p>
      </div>
    </div>
  </div>

  <button class="walletForm">Create a new Wallet</button>

</form>

{{#if error}}
  <p class="error">Message: {{error}}</p>
{{/if}}

<script src="/js/walletForm.js"></script>